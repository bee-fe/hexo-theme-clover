<nav id="nav">
  <header class="header">
    <a href="<%= url_for('/') %>" class="title"><%= theme.nav.title %></a>
  </header>
  <div class="ctnWrap">
    <div class="icons">
      <% if (theme.social) { %>
        <% _.forEach(theme.social, function(value, key) { %>
          <% if (value) { %>
            <a href="<%= value %>" target="_blank" class="nav-icn iconfont icon-<%= key.toLowerCase() %>"></a>
          <% } %>
        <% }); %>
      <% } %>
    </div>
    <div class="menu">
      <% if (theme.menu) { %>
        <% _.forEach(theme.menu, function(value, key) {
          value = value.path || value;
          if (value) { %>
            <div class="nav-menu <%= is_current(value) ? 'active' : '' %>">
              <a href="<%= url_for(value) %>"><%= key.toUpperCase() %></a>
              <div class="underline"></div>
            </div>
          <% } %>
        <% }); %>
      <% } %>
    </div>
  </div>
</nav>